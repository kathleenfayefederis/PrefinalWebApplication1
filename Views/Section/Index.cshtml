<style>
    #sectionFormContainer {
        display: none;
    }

    .card {
        padding: 25px;
        margin: 40px 0px;
        border-radius: 10px;
    }
</style>

<div class="d-flex justify-content-between text-center">
    <h1>Sections</h1>
    <button class="btn btn-primary" onClick="toggleForm()"><i class="fa fa-user-plus"></i></button>
</div>

<div id="sectionFormContainer" class="container my-3">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="rounded-3 card">
                <div class="card-header text-center">
                    <h4 class="my-2">Add New Section</h4>
                </div>
                <div class="card-body">
                    <form method="post" action="/Section/SaveSectionInfo">
                        <div class="mb-3">
                            <label>Section Name:</label>
                            <input class="form-control" type="text" name="SectionName" required />
                        </div>
                        <div class="mb-3">
                            <label>Course:</label>
                            <input class="form-control" type="text" name="Course" required />
                        </div>
                        <div class="mb-3">
                            <label>Year Level:</label>
                            <input class="form-control" type="number" name="YearLevel" required />
                        </div>
                        <button type="submit" class="btn btn-success my-3 w-100">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container my-3">
    <div class="table-responsive">
        <table class="table table-info p-3 table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Section ID</th>
                    <th scope="col">Section Name</th>
                    <th scope="col">Course</th>
                    <th scope="col">Year Level</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var sections in Model.SectionsList)
                {
                    <tr>
                        <td>@sections.SectionID</td>
                        <td>@sections.SectionName</td>
                        <td>@sections.Course</td>
                        <td>@sections.YearLevel</td>
                        <td>
                            <input type="hidden" name="sectionId" value="@sections.SectionID" />
                            <a class="btn btn-outline-warning" href="/Section/EditSectionInfo?sectionId=@sections.SectionID">
                                <i class="fa fa-pen"></i>
                            </a>
                            <a class="btn btn-outline-danger"
                                href="/Section/DeleteSectionInfo?sectionId=@sections.SectionID">
                                <i class="fa fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<script>
    function toggleForm() {
        var formContainer = document.querySelector('#sectionFormContainer');
        const currentDisplay = window.getComputedStyle(formContainer).display;
        formContainer.style.display = currentDisplay === 'none' ? 'block' : 'none';
    }
</script>
