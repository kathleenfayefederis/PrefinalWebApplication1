@model RoomViewModel

<h2 class="display-4" style="text-align: center">Edit Room Information</h2>

<div id="studentFormContainer" class="container my-3">
  <div class="row justify-content-center">
    <div class="col-sm-12 col-md-12 col-lg-12">
      <div class="rounded-3 card">
        <div class="card-header text-center">
          <h4 class="my-2">Edit Room</h4>
        </div>

        <div class="card-body">
          <form method="post" action="/Room/UpdateRoomInfo">
            <div class="mb-3">
              <input type="hidden" name="RoomID" value="@Model.RoomID" />
            </div>
            <div class="mb-3">
              <label>Room Name:</label>
              <input class="form-control" value="@Model.RoomName" type="text" name="RoomName" required />
            </div>
            <div class="mb-3">
              <label>Floor:</label>
              <input class="form-control" value="@Model.Floor" type="text" name="Floor" required />
            </div>
            <div class="mb-3">
              <label>Building:</label>
              <input class="form-control" value="@Model.Building" type="number" name="Building" required />
            </div>
            <button type="submit" class="btn btn-success my-3 w-100">Save</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>