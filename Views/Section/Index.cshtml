<h1>Sections</h1>

<div class="container my-3">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-header text-center">
                    <h4 class="my-2">Add New Section</h4>
                </div>
                <div class="card-body">
                    <form method="post" action="/Users/SaveUser" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label>Section Name:</label>
                            <input class="form-control" type="text" name="SectionName" required />
                        </div>
                        <div class="mb-3">
                            <label>Course:</label>
                            <input class="form-control" type="text" name="Course" required />
                        </div>
                        <div class="mb-3">
                            <label>Year Level:</label>
                            <input class="form-control" type="number" name="YearLevel" required />
                        </div>
                        <button type="submit" class="btn btn-primary my-3 w-100">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Section ID</th>
            <th scope="col">Section Name</th>
            <th scope="col">Course</th>
            <th scope="col">Year Level</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Mark</td>
            <td>Otto</td>
            <td>Otto</td>
            <td>Otto</td>
        </tr>
        <tr>
            <th scope="row">2</th>
            <td>Otto</td>
            <td>Mark</td>
            <td>Otto</td>
            <td>Otto</td>
        </tr>
    </tbody>
</table> 