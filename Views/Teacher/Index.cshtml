<style>
    #teacherFormContainer {
        display: none;
    }
</style>

<div class="d-flex justify-content-between text-center">
    <h1>Teachers</h1>
    <button class="btn btn-primary" onClick="toggleForm()"><i class="fa fa-user-plus"></i></button>
</div>

<div id="teacherFormContainer" class="container my-3">
    <div class="row justify-content-center">
        <div class="col-sm-12 col-md-12 col-lg-12">
            <div class="rounded-3 card">
                <div class="card-header text-center">
                    <h4 class="my-2">Add New Teacher</h4>
                </div>
                <div class="card-body">
                    <form method="post" action="/Users/SaveTeacher" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label>First Name:</label>
                            <input class="form-control" type="text" name="FirstName" required />
                        </div>
                        <div class="mb-3">
                            <label>Middle Name:</label>
                            <input class="form-control" type="text" name="MiddleName" required />
                        </div>
                        <div class="mb-3">
                            <label>Last Name:</label>
                            <input class="form-control" type="text" name="LastName" required />
                        </div>
                        <div class="mb-3">
                            <label>Department:</label>
                            <input class="form-control" type="text" name="Department" required />
                        </div>
                        <div class="mb-3">
                            <label>Email Address:</label>
                            <input class="form-control" type="email" name="Email" required />
                        </div>
                        <div class="mb-3">
                            <label>Contact Number:</label>
                            <input class="form-control" type="text" name="ContactNumber" required />
                        </div>
                        <button type="submit" class="btn btn-success my-3 w-100">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container my-3">
    <div class="table-responsive">
        <table class="table table-info">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Teacher ID</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Middle Name</th>
                    <th scope="col">Department</th>
                    <th scope="col">Email Address</th>
                    <th scope="col">Contact Number</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">1</th>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>Otto</td>
                </tr>
                <tr>
                    <th scope="row">2</th>
                    <td>Mark</td>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>Otto</td>
                    <td>Mark</td>
                    <td>Otto</td>
                    <td>Mark</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>


<script>
    function toggleForm() {
        var formContainer = document.querySelector('#teacherFormContainer');
        const currentDisplay = window.getComputedStyle(formContainer).display;
        formContainer.style.display = currentDisplay === 'none' ? 'block' : 'none';
    }
</script>